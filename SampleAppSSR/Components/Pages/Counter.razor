@page "/counter"
@attribute [StreamRendering]

<h3>Counter: @_currentCount</h3>

@code {
    private int _currentCount = 10;

    protected override async Task OnInitializedAsync()
    {
        for (int i = 10; i > 0; i--)
        {
            await Task.Delay(1000);

            _currentCount--;

            StateHasChanged();
        }
    }

}
